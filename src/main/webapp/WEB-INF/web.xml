<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<display-name>yunventory</display-name>
	
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath:/yunventory-application-context.xml
		</param-value>
	</context-param>

	<servlet>
		<servlet-name>yunventory-api-jersy</servlet-name>
		<servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>

		<init-param>
			<param-name>javax.ws.rs.Application</param-name>
			<param-value>yuown.yunventory.config.YuownResourceConfiguration</param-value>
		</init-param>
		<init-param>
			<param-name>com.sun.jersey.config.property.WadlGeneratorConfig</param-name>
			<param-value>yuown.yunventory.config.YuownJerseyWADLGeneratorConfiguration</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>yunventory-api-jersy</servlet-name>
		<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>
</web-app>
